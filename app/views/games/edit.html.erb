

<%= form_tag(@game, { class: "game_form" } ) do %>
    <h1>Edit Game Details</h1>
    <% if @game.errors.any? %>
        <div id="error_message">
            <h4>The following errors have occurred:</h4>
            <ul>
                <% @game.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <% if @game.errors.empty? %>
        <div class="field">
    <% else %>
        <div class="field_with_errors">
    <% end %>
        <%= render 'form' %>
    </div>
<% end %>

<br>

<div class="go_back_link">
    <%= link_to "go back", user_game_path(current_user.id, @game) %>
</div>