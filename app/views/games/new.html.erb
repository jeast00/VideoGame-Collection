<h1>Add a game to your collection</h1>

<%= form_tag @game, method: 'post' do %>
    <% if @game.errors.any? %>
        <div id="error_message">
            <h4>The following errors have occurred:</h4>
            <ul>
                <% @game.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <% if @game.errors.empty? %>
        <div class="field">
    <% else %>
        <div class="field_with_errors">
    <% end %>
        <%= form_for(@game) do |f| %>
            <%= f.label :title %>
            <%= f.text_field :title %><br><br>

            <%= f.label :platform %>
            <%= f.text_field :platform %><br><br>

            <%= f.label :genre_type %>
            <%= f.collection_select :genre_id, Genre.all, :id, :genre_type %><br><br>

            <%= f.submit "Add Game" %>
        <% end %>
    </div>
<% end %>

<%= link_to "go back", user_path(current_user.id) %>