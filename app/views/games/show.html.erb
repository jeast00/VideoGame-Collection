
<div class="game_details">
    <h1><%= @user.name %>'s Game Collection Details </h1>
    <p><h3>Title: <%= @game.title %></h3></p>
    <p><h4>Platform: <%= @game.platform %></h4></p>
    <p><h4>Genre type: <%= @game.genre.genre_type %></h4></p>
</div>

<% if @user == current_user %>
<div class="links">
    <%= link_to "edit game details", edit_user_game_path(current_user.id, @game) %> |
    <%= link_to "delete game", @game, method: :delete, data: { confirm: "Are you sure you want to delete this game?" } %><br><br>
</div>
<% end %>

<div class="go_back_link">
    <%= link_to "go back", user_games_path(@user) %>
</div>

