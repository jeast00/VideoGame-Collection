<!DOCTYPE html>
<html>
  <head>
    <title>Videogame Collection</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'styles' %>

  </head>

  <body>

  <div class="nav-bar">
  <%= link_to "Video Game Collection", login_path %> |
  <% if logged_in? %>
    <%= link_to 'logout', sessions_path, method: :delete, data: { confirm: "Are you sure you want to logout?" } %><br>
  <% else %>
    <%= link_to 'signup', '/signup' %>
  <% end %>
  </div>

    <%= yield %>
  </body>
</html>
